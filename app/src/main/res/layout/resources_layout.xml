<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resourcesLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/mineral"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="1dp"
            android:src="@drawable/mineral"
            android:background="@drawable/resource_icon_background"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/ResourcePanel"
            tools:text="10.000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/fibre"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="1dp"
            android:src="@drawable/thread"
            android:background="@drawable/resource_icon_background"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/ResourcePanel"
            tools:text="10.000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/gasoline"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="1dp"
            android:background="@drawable/resource_icon_background"
            android:src="@drawable/oil"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/ResourcePanel"
            tools:text="10.000" />

    </LinearLayout>

</LinearLayout>